{
  "$schema": "https://biomejs.dev/schemas/2.3.9/schema.json",
  "vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true },
  "files": {
    "includes": [
      "**/*.{ts,tsx,js,jsx,mjs,cjs,css,json}",
      "!!node_modules",
      "!!.next",
      "!!**/dist"
    ],
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "expand": "never",
    "indentStyle": "space",
    "lineWidth": 88
  },
  "linter": {
    "domains": { "next": "recommended", "react": "recommended", "test": "recommended" },
    "enabled": true,
    "rules": { "nursery": { "useSortedClasses": "error" }, "recommended": true }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              [":NODE:"],
              ":BLANK_LINE:",
              [":PACKAGE:"],
              ":BLANK_LINE:",
              [":ALIAS:"],
              ":BLANK_LINE:",
              ["."]
            ]
          }
        }
      }
    }
  },
  "css": {
    "formatter": { "enabled": true, "lineWidth": 88 },
    "parser": { "tailwindDirectives": true }
  },
  "javascript": {
    "formatter": {
      "bracketSpacing": false,
      "indentStyle": "space",
      "lineWidth": 88,
      "quoteStyle": "double"
    }
  }
}
